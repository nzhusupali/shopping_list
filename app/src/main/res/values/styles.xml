<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ET_logIn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">242dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">544dp</item>
        <item name="android:autofillHints">@string/login</item>
        <item name="android:drawableStart">@drawable/ic_person</item>
        <item name="android:drawablePadding">@dimen/standard_padding_15</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ET_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">312dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">477dp</item>
        <item name="android:autofillHints">@string/password</item>
        <item name="android:drawableStart">@drawable/ic_lock</item>
        <item name="android:drawablePadding">@dimen/standard_padding_15</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BTN_logIn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">428dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">355dp</item>
    </style>
</resources>